# Application
NODE_ENV=development
PORT=5000
APP_NAME=EduFlow Hub

# Client & Server URLs
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:5000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
MONGODB_URI=mongodb://localhost:27017/eduflow-hub
MONGODB_URI_TEST=mongodb://localhost:27017/eduflow-hub-test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_ACCESS_SECRET=your-super-secret-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AI Services
GEMINI_API_KEY=your-gemini-api-key
OPENAI_API_KEY=your-openai-api-key

# Cloudflare R2
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=eduflow-hub
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Email Service
BREVO_API_KEY=your-brevo-api-key
EMAIL_FROM=noreply@eduflow-hub.com
EMAIL_FROM_NAME=EduFlow Hub

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX=5

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000

# BullMQ
BULLMQ_CONCURRENCY=5
BULLMQ_ATTEMPTS=3

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.ms-powerpoint,application/vnd.openxmlformats-officedocument.presentationml.presentation

# Session
SESSION_SECRET=your-session-secret-key-change-this-in-production

# Security
BCRYPT_ROUNDS=10
